# Example terraform.tfvars for Development Environment
# Copy this file to terraform.tfvars and update with your values

aws_region   = "us-east-1"
project_name = "transaction-validator"
environment  = "dev"

# Networking
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b", "us-east-1c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]
database_subnet_cidrs = ["10.0.21.0/24", "10.0.22.0/24", "10.0.23.0/24"]
single_nat_gateway   = true # Cost saving for dev

# Database
database_name                    = "transactionvalidator"
database_master_username         = "dbadmin"
aurora_instance_class            = "db.t4g.medium"
aurora_instance_count            = 1
database_backup_retention_period = 3
database_deletion_protection     = false
database_skip_final_snapshot     = true

# Cache
redis_node_type              = "cache.t4g.small"
redis_num_cache_nodes        = 1
redis_multi_az_enabled       = false
redis_snapshot_retention_limit = 3

# EKS
eks_cluster_version = "1.28"

# Observability
alert_email_addresses = ["devops@example.com"]
log_retention_days    = 3

